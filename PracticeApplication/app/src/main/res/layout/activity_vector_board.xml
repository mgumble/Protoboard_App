<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.emilie.practiceapplication.VectorBoardActivity"
    android:background="#608984"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_top">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tl">
        </TableLayout>
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_flip"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/ll">

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flip"
        android:id="@+id/btn_flip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id = "@+id/toolbar"
        android:layout_toStartOf="@+id/btn_flip"
        android:layout_alignTop="@+id/btn_flip">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inspect"
            android:id="@+id/btn_inspect"
            android:checked="false"
            android:layout_alignTop="@+id/btn_move"
            android:layout_toStartOf="@+id/btn_move" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move"
            android:id="@+id/btn_move"
            android:checked="true"
            android:layout_alignTop="@+id/btn_rotate"
            android:layout_toStartOf="@+id/btn_rotate" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate"
            android:id="@+id/btn_rotate"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/btn_flip"
            android:checked="false" />
    </RadioGroup>


</RelativeLayout>
